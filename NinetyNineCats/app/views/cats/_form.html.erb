<% if action == :edit %>
    <% action_url = cat_url(cat) %>
<% else %>
    <% action_url = cats_url %>
<% end %>

<form action="<%= action_url %>" method="post">
    <% if action == :edit %>
        <input type="hidden" name="_method" value="PATCH">
    <% end %>

    <label for="name">Name</label>
    <input id="name" type="text" name="cats[name]" value="<%= cat.name %>">

    <br>

    <label for="birth_date">Birth Date</label>
    <input id="birth_date" type="date" name="cats[birth_date]" value="<%= cat.birth_date %>">

    <br>

    <label for="color">Color</label>
    <select for="color" name="cats[color]">
        <option disabled <%= cat.color ? "" : "selected" %>>-- Please Select--</option>
        <option value="Tabby" <%= cat.color == "Tabby" ? "selected" : "" %>>Tabby</option>
        <option value="Calico" <%= cat.color == "Calico" ? "selected" : "" %>>Calico</option>
        <option value="Black" <%= cat.color == "Black" ? "selected" : "" %>>Black</option>
        <option value="White" <%= cat.color == "White" ? "selected" : "" %>>White</option>
    </select>

    <br>

    <label for="male">Male</label>
    <input type="radio" for="male" name="cats[sex]" value="M" <%= cat.sex == "M" ? "checked" : "" %>>

    <br>
    
    <label for="female">Female</label>
    <input type="radio" for="female" name="cats[sex]" value="F" <%= cat.sex == "F" ? "checked" : "" %>>

    <br>

    <label for="description">Description</label>
    <textarea name="cats[description]"><%= cat.description %></textarea>

    <br>

    <input type="submit" value="Add Cat to List">
</form>